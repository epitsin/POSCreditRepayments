﻿@model POSCreditRepayments.Web.ViewModels.Products.AllProductsViewModel

<div class="row">
    <div class="box">
        <div class="row">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    @Model.Name
                </h2>
                <hr>
                <img class="img-responsive img-border img-left" style="width: 300px;" src="@Model.ImageUrl" alt="">
                <hr class="visible-xs">
                <p>@Html.Raw(HttpUtility.HtmlDecode(Model.Description))</p>
                <hr class="visible-xs">
                <p><strong>Price: @Model.Price</strong></p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink("Buy on credit", "BuyProduct", "Credit", new { id = Model.ProductId }, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
</div>