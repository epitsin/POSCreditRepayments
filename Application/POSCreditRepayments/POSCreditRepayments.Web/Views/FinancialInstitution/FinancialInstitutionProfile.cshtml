@model POSCreditRepayments.Web.ViewModels.FinancialInstitutions.FinancialInstitutionProfileViewModel
<div class="box">
    <div class="form-group padding">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.UserName, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.IsApproved, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.CheckBoxFor(m => m.IsApproved, new { @readonly = "readonly", @class = "form-control", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Name, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Address, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Phone, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Email, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.Fax, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Fax, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.WebSite, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.WebSite, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.CreditIntermerdiary, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.CreditIntermerdiary, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group padding">
        @Html.LabelFor(m => m.ApplicationFee, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.ApplicationFee, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="row">
        <h3 class="text-center">Interest rates</h3>
    </div>
    @foreach (var purchaseProfile in Model.FinancialInstitutionPurchaseProfiles)
    {
        <div class="form-group padding">
            <div class="col-md-4 control-label">
                <label>
                    Credit term: @purchaseProfile.PurchaseProfile.MonthsMin - @purchaseProfile.PurchaseProfile.MonthsMax months
                    <br />
                    Price range: @purchaseProfile.PurchaseProfile.PriceMin - @purchaseProfile.PurchaseProfile.PriceMax
                </label>
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => purchaseProfile.InterestRate, new { @readonly = "readonly", @class = "form-control" })
            </div>
        </div>
    }
    <hr />
    <div class="row">
        <h3 class="text-center">Insurance rates</h3>
    </div>
    @foreach (var insurance in Model.Insurances)
    {
        <div class="form-group padding">
            <div class="col-md-4 control-label">
                <label>
                    @insurance.Type
                </label>
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => insurance.PercentageRate, new { @readonly = "readonly", @class = "form-control", type = "number" })
            </div>
        </div>
    }

    @Html.ActionLink("Edit", "EditFinancialInstitutionProfile", "FinancialInstitution", new { id = Model.Id }, new { @class = "btn btn-lg btn-info" })
</div>